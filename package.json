{
    "name": "web3-sekit",
    "version": "2.0.0",
    "author": "devilyouwei",
    "license": "MIT",
    "description": "Automated software engineering kits for Web3, Blockchain, and Smart Contracts.",
    "main": "web/app.js",
    "scripts": {
        "format": "prettier 'src/*.js' --write",
        "dev": "nodemon ./web/app.js -i ./db/",
        "restart": "pm2 restart ./web/app.js",
        "start": "pm2 start ./web/app.js",
        "stop": "pm2 stop ./web/app.js",
        "status": "pm2 status",
        "delete": "pm2 delete app",
        "pm2-update": "pm2 update"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/web3se-lab/web3-sekit"
    },
    "keywords": [
        "web3",
        "blockchain",
        "smart contract",
        "crawler",
        "software engineering",
        "AI",
        "deep learning"
    ],
    "bugs": {
        "url": "https://github.com/web3se-lab/web3-sekit/issues"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.42",
        "@types/serve-index": "^1.9.1",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^3.1.4",
        "npm-check-updates": "^16.6.3",
        "prettier": "^2.8.3"
    },
    "dependencies": {
        "@fastify/cors": "^11.1.0",
        "@fastify/multipart": "^9.2.1",
        "@fastify/static": "^8.2.0",
        "@solidity-parser/parser": "^0.20.2",
        "@stdlib/assert-is-json": "^0.1.1",
        "@tensorflow/tfjs-node": "^4.22.0",
        "app-root-path": "^3.1.0",
        "axios": "^1.7.9",
        "bert-tokenizer": "^1.1.8",
        "bluebird": "^3.7.2",
        "body-parser": "^1.20.1",
        "cheerio": "^1.0.0-rc.12",
        "dotenv": "^16.0.3",
        "eventsource-parser": "^1.1.1",
        "express": "^4.18.2",
        "fastify": "^5.6.1",
        "form-data": "^4.0.0",
        "json-fixer": "^1.6.15",
        "lodash": "^4.17.21",
        "md5": "^2.3.0",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.1.0",
        "node-fetch": "^2.7.0",
        "node-xlsx": "^0.21.0",
        "pm2": "^5.2.2",
        "puppeteer-extra": "^3.3.6",
        "puppeteer-extra-plugin-adblocker": "^2.13.6",
        "puppeteer-extra-plugin-stealth": "^2.11.2",
        "querystring": "^0.2.1",
        "request": "^2.88.2",
        "sentencepiece-js": "^1.1.0",
        "sequelize": "^6.28.0",
        "serve-index": "^1.9.1",
        "solc": "latest",
        "superagent": "^8.0.9",
        "tf-kmeans-node": "^1.1.1",
        "treebank-tokenizer": "^0.0.1",
        "treeify": "^1.1.0",
        "uniai": "^1.14.1",
        "web3": "^1.8.2",
        "xlsx": "^0.18.5"
    },
    "eslintConfig": {
        "root": true,
        "parserOptions": {
            "ecmaVersion": "latest"
        },
        "env": {
            "es6": true,
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "no-var": "error",
            "no-unused-vars": "warn",
            "prefer-const": "error",
            "no-invalid-regexp": "off",
            "no-div-regex": "off",
            "no-control-regex": "off",
            "prettier/prettier": "error"
        }
    },
    "prettier": {
        "trailingComma": "none",
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "singleQuote": true
    }
}
